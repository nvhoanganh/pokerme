		"rollup-plugin-livereload": "^1.0.0",
		"rollup-plugin-svelte": "^5.0.3",
		"rollup-plugin-terser": "^5.1.2",
		"svelte": "^3.49.0"
	},
	"dependencies": {
		"copy-to-clipboard": "^3.3.1",
		"firebase": "^7.14.2",
		"sirv-cli": "^0.4.4",
		"slug": "^2.1.1",
		"svelte-router-spa": "^5.6.0"
	}
